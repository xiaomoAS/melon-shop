page {
  background: #F4F4F4;
}
.order_baner {
  margin: 20rpx auto;
}
.order_baner image {
  display: block;
  width: 100%;
}
.order_adres_cont {
  display: flex;
  align-items: center;
  position: relative;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background: #fff url(data:image/png;base64,) no-repeat center top;
  background-size: cover;
}
.order_adres_cont .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.order_adres_cont .l_cont {
  display: flex;
  align-items: center;
}
.order_adres_cont .dt {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}
.order_adres_cont .dt image {
  widht: 31rpx;
}
.order_adres_cont .dd {
  width: calc(100% - 40rpx);
  padding-left: 30rpx;
}
.order_adres_cont .dd .add_txt {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}
.order_adres_cont .dd .add_deta .name {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.order_adres_cont .dd .add_deta .name text {
  font-weight: bold;
  color: #000;
  margin-right: 20rpx;
}
.order_adres_cont .dd .add_deta .tel {
  font-size: 24rpx;
  color: #666;
}
.order_adres_cont .arr {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 12rpx;
}
.order_product_contain {
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.order_product_contain .title_head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  padding: 20rpx;
}
.order_product_contain .title_head .tle {
  position: relative;
  font-size: 28rpx;
  color: #000;
}
.order_product_contain .title_head .tle::after {
  content: "";
  display: block;
  width: 6rpx;
  height: 26rpx;
  position: absolute;
  left: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #61C55E;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.order_product_contain .title_head .num {
  font-size: 24rpx;
  color: #666666;
}
.order_product_contain .pro_last {
  padding: 0 20rpx;
  max-height: 520rpx;
  overflow: hidden;
}
.order_product_contain .pro_last.active {
  max-height: inherit;
  overflow: inherit;
}
.order_product_contain .pro_list {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  position: relative;
}
.order_product_contain .pro_list::after {
  content: "";
  display: block;
  width: 90%;
  height: 1rpx;
  position: absolute;
  bottom: 0;
  left: 5%;
  background: #F1F1F1;
}
.order_product_contain .pro_list .pro_i {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 132rpx;
  height: 132rpx;
  border-radius: 10rpx;
}
.order_product_contain .pro_list .pro_i image {
  display: block;
  width: 100%;
  height: 100%;
}
.order_product_contain .pro_list .deta_cont {
  width: calc(100% - 132rpx);
  padding-left: 20rpx;
}
.order_product_contain .pro_list .deta_cont .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 20rpx;
}
.order_product_contain .pro_list .deta_cont .specs {
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.order_product_contain .pro_list .deta_cont .num {
  font-size: 22rpx;
  color: #666666;
}
.order_product_contain .pro_list .deta_cont .price {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #FF0000;
}
.order_product_contain .bit_more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #8A8A8A;
}
.order_product_contain .bit_more .arr {
  width: 19rpx;
  margin: 0 15rpx;
}
.order_coupon_cont {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.order_coupon_cont .title_head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 3rpx solid #F1F1F1;
}
.order_coupon_cont .title_head .dt {
  font-size: 28rpx;
  color: #000000;
}
.order_coupon_cont .title_head .dd {
  font-size: 24rpx;
  color: #FF0000;
}
.order_coupon_cont .det_cont {
  padding: 20rpx 0;
}
.order_coupon_cont .det_cont .dl {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}
.order_coupon_cont .det_cont .dl .dt {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}
.order_coupon_cont .det_cont .dl .dt .i {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  margin-right: 15rpx;
}
.order_coupon_cont .det_cont .dl .dt .i image {
  width: 35rpx;
}
.order_coupon_cont .det_cont .dl .dd {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #FF0000;
}
.order_total_cont {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.order_total_cont .tle_total {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.order_total_cont .tle_total .tle {
  font-size: 28rpx;
  color: #000000;
  font-weight: bold;
}
.order_total_cont .tle_total .dd {
  font-size: 28rpx;
  color: #FF0000;
}
.order_total_cont .dl {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
}
.order_total_cont .dl .dt {
  font-size: 26rpx;
  color: #666666;
}
.order_total_cont .dl .dd {
  font-size: 26rpx;
  color: #666666;
  display: flex;
  align-items: center;
}
.order_total_cont .dl .dd .yj {
  font-size: 24rpx;
  color: #C5C5C5;
  text-decoration: line-through;
  margin-left: 5rpx;
}
.order_total_cont .dl .dd .xj {
  font-size: 24rpx;
  color: #FF0000;
  margin-left: 5rpx;
}
.order_pay_cont {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.order_pay_cont .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 20rpx;
}
.order_pay_cont .pay_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
}
.order_pay_cont .pay_list .l_cont {
  display: flex;
  align-items: flex-start;
}
.order_pay_cont .pay_list .l_cont .i {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33rpx;
  height: 33rpx;
}
.order_pay_cont .pay_list .l_cont .i image {
  width: 33rpx;
}
.order_pay_cont .pay_list .l_cont .cont {
  width: calc(100% - 33rpx);
  padding-left: 20rpx;
}
.order_pay_cont .pay_list .l_cont .cont .tle {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}
.order_pay_cont .pay_list .l_cont .cont .txt {
  font-size: 24rpx;
  color: #666666;
}
.order_pay_cont .pay_list .l_cont .cont .txt text {
  color: #61C55E;
}
.order_pay_cont .pay_list .r_cont {
  display: flex;
  align-items: center;
}
.order_pay_cont .pay_list .r_cont .charge_btn {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  margin: 0 10rpx;
  border-radius: 100rpx;
  background: #61C55E;
  font-size: 24rpx;
  color: #FFFFFF;
}
.order_pay_cont .bit_txt {
  font-size: 22rpx;
  color: #666666;
  line-height: 26rpx;
}
.order_foot_cont {
  width: 100%;
  height: 100rpx;
}
.order_foot_cont .cont {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order_foot_cont .l_cont {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #000000;
}
.order_foot_cont .l_cont text {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF5F36;
}
.order_foot_cont .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 175rpx;
  height: 64rpx;
  border-radius: 100rpx;
  background: #61C55E;
  font-size: 26rpx;
  color: #FFFFFF;
}
